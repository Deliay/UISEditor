<Page x:Class="UISEditor.View.ResourceViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UISEditor.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ResourceViewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32px"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" MaxHeight="32px" VerticalAlignment="Top">
            <ComboBox Name="ResourceList" Height="32px" Text="" VerticalAlignment="Center" Margin="0,0,32,0" SelectionChanged="ResourceList_SelectionChanged"/>
            <!--<Button Click="HideViewer" Width="32px" HorizontalAlignment="Right">X</Button>-->
        </Grid>
        <Viewbox Grid.Row="1" Stretch="Uniform" Height="720" Width="1280">
            <Canvas x:Name="RenderLayer" Height="720" Width="1280" IsEnabled="True" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Gray">
                <Image Name="ImageLayer" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>
